# تفعيل mod_rewrite
RewriteEngine On

# ✅ توجيه روابط السكشنات (about, services, resume, contact) إلى index.html
RewriteRule ^(about|services|resume|contact)/?$ /index.html [L]

# ✅ توجيه طلبات بدون .html لتفتح الملف .html فعليًا
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# ✅ توجيه العكس: لو حد كتب .html في الرابط، نحوله تلقائيًا بدون .html
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# ✅ جعل / يفتح index.html
DirectoryIndex index.html
